<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#0BB3C8">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Jose"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="107dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Menu Proyectos"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="68dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/logo" />

            </TableRow>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="67dp">

                <Space
                    android:layout_width="14dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnExit2"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="#00BCD4"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    app:icon="@android:drawable/ic_menu_revert"
                    app:iconTint="#473434" />


                <Space
                    android:layout_width="28dp"
                    android:layout_height="match_parent" />

            </TableRow>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre del Proyecto"
                android:inputType="text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Subtitulo"
                android:inputType="text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/editTextTextMultiLine"
                android:layout_width="385dp"
                android:layout_height="96dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Contenido"
                android:inputType="textMultiLine" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="253dp"
                android:layout_height="142dp"
                android:background="#415254"
                app:srcCompat="@android:drawable/ic_menu_crop" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/btnImage"
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#10B8CE"
                android:text="Seleccionar Image" />

            <Button
                android:id="@+id/btnaddProject"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#0BB4C8"
                android:text="Publicar" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="141dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>